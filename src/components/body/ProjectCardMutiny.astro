---
import ImageWithIconsAndText from "@/components/partials/ImageWithIconsAndText.astro";

const profileIcons: IconBasic[] = [
    {
        name: "Svelte",
        icon: "svelte",
        link: "https://svelte.dev/"
    },
    {
        name: "Vite",
        icon: "vitejs",
        link: "https://vitejs.dev/"
    },
    {
        name: "howlerjs",
        icon: "howlerjs",
        link: "https://howlerjs.com/",
        customIcon: true,
        customLink: "/icons/howlerjs-svg-icon.svg"
    },
    {
        name: "GitHub",
        icon: "github",
        link: "https://github.com/otakuryo/mutiny-music-svelte"
    }
]
---

<div class="col-span-2 bg-white bg-opacity-10 backdrop-filter backdrop-blur-lg rounded-xl p-6 shadow-lg">
    <h2 class="text-2xl font-semibold mb-4">Proyectos Destacados</h2>
    <div class="flex flex-col md:grid grid-cols-2 gap-4">
        <ImageWithIconsAndText  image="/img/mutiny-music-svelte.png" 
                                icons={profileIcons} 
                                alt="Imagen con iconos - Agustin Mita" 
                                title="Cliente Web de subsonic" 
                                description="Cliente Web de subsonic usando el framework Svelte y la libreria de audio HowlerJS" />
    </div>
</div>