const items = [
    { name: "JavaScript", icon: "javascript", link: "https://developer.mozilla.org/en-US/docs/Web/JavaScript" },
    { name: "TypeScript", icon: "typescript", link: "https://www.typescriptlang.org/" },
    { name: "Svelte", icon: "svelte", link: "https://svelte.dev/" },
    { name: "Astro", icon: "astro", link: "https://astro.build/" },
    { name: "Laravel", icon: "laravel", link: "https://laravel.com/" },
    { name: "PHP", icon: "php", link: "https://www.php.net/" },
    { name: "MySQL", icon: "mysql", link: "https://www.mysql.com/" },
    { name: "Git", icon: "git", link: "https://git-scm.com/" },
    { name: "SASS/SCSS", icon: "sass", link: "https://sass-lang.com/" },
    { name: "Bootstrap", icon: "bootstrap", link: "https://getbootstrap.com/" },
    { name: "HTML5", icon: "html5", link: "https://developer.mozilla.org/en-US/docs/Web/HTML" },
    { name: "CSS3", icon: "css3", link: "https://developer.mozilla.org/en-US/docs/Web/CSS" },
